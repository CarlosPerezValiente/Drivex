<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/layoutRaiz"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Campo nombre -->
        <EditText
            android:id="@+id/etNombreAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Nombre del alumno"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:minHeight="48dp"
            android:textSize="16sp" />

        <!-- Campo apellidos -->
        <EditText
            android:id="@+id/etApellidosAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Apellidos"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:minHeight="48dp"
            android:textSize="16sp" />

        <!-- Campo DNI -->
        <EditText
            android:id="@+id/etDniAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="DNI"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:minHeight="48dp"
            android:textSize="16sp" />

        <!-- BotÃ³n agregar -->
        <Button
            android:id="@+id/btnAgregarAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#3F51B5"
            android:text="Agregar Alumno"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Lista de alumnos -->
        <LinearLayout
            android:id="@+id/listaAlumnosLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
